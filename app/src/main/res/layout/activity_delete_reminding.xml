<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".delete_reminding">
    <TextView
        android:id="@+id/textview_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定删除此提醒？"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"/>
    <Button
        android:layout_width="85.5dp"
        android:layout_height="50.5dp"
        android:id="@+id/cancel"
        android:text="取消"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:background="@drawable/button_1_background"
        android:layout_marginStart="4.5dp"/>
    <Button
        android:layout_width="85.5dp"
        android:layout_height="50.5dp"
        android:id="@+id/delete"
        android:text="删除"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_alignTop="@id/cancel"
        android:layout_toRightOf="@id/cancel"
        android:layout_marginLeft="4dp"
        android:background="@drawable/button_1_blue_background"/>

</RelativeLayout>